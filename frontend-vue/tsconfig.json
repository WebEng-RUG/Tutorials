{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    /* other configs */
    "paths": {
      // This creates an alias for the root source directory with the '@' symbol. 
      // This is what allows me to address all component files with the @ symbol.
      "@/*": [
        "./src/*" 
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
